// firestore.rules
// Deploy with: firebase deploy --only firestore:rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Users: read any, write only your own ──────────────────────────────────
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ── Rooms ─────────────────────────────────────────────────────────────────
    match /rooms/{roomId} {
      // Any signed-in user can read a room (needed to join via code)
      allow read: if request.auth != null;

      // Only the host can create the room
      allow create: if request.auth != null
                    && request.resource.data.hostId == request.auth.uid;

      // Host or partner can update (e.g. partnerName field)
      allow update: if request.auth != null
                    && (resource.data.hostId == request.auth.uid
                        || resource.data.partnerName != null);

      // ── Progress subcollection ────────────────────────────────────────────
      match /progress/{userId} {
        // Anyone in the room can read all progress docs (to see partner's page)
        allow read: if request.auth != null;
        // Only write your own progress
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // ── Messages subcollection ────────────────────────────────────────────
      match /messages/{messageId} {
        allow read: if request.auth != null;
        // Only write messages as yourself
        allow create: if request.auth != null
                      && request.resource.data.userId == request.auth.uid;
      }
    }
  }
}
